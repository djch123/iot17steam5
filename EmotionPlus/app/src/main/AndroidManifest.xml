<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jialingliu.emotionplus">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RecommendationActivity"
            android:label="RecommendationActivity">
        </activity>

        <activity
            android:name=".HomekitActivity"
            android:label="HomekitActivity">
        </activity>

        <activity
            android:name=".HistoryActivity"
            android:label="HistoryActivity">
        </activity>

        <activity
            android:name=".GameActivity"
            android:label="GameActivity">
        </activity>
    </application>

</manifest>